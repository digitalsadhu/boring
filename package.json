{
  "name": "boring",
  "version": "1.0.0",
  "description":
    "Takes care of the boring job of setting up finn node projects",
  "main": "index.js",
  "bin": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/finn-no/boring.git"
  },
  "dependencies": {
    "deep-assign": "^2.0.0",
    "js-yaml": "^3.10.0",
    "npm-install-package": "^2.1.0",
    "ora": "^1.3.0",
    "uninstall-package": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.3",
    "@commitlint/config-conventional": "^5.2.3",
    "auto-readme": "^1.0.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.12.1",
    "eslint-config-finn": "^3.0.0",
    "eslint-config-finn-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.9.0",
    "react": "^16.2.0"
  },
  "scripts": {
    "lint:format": "eslint --fix .",
    "lint": "eslint .",
    "test": "jest --coverage",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "readme": "auto-readme ./readme.js README.md"
  },
  "author": "Richard Walker <digitalsadhu@gmail.com>",
  "license": "MIT",
  "jest": {
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": ["eslint --fix --config ./.eslintrc", "git add"],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write *.md *.json .eslintrc",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "maintainers": [],
  "contributors": [],
  "bugs": {
    "url": "https://github.com/finn-no/boring/issues"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
