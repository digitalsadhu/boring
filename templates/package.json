{
    "scripts": {
        "lint:format": "eslint --fix .",
        "lint": "eslint .",
        "test": "jest --coverage",
        "precommit": "lint-staged",
        "cm": "git-cz"
    },
    "jest": {
        "clearMocks": true,
        "coverageThreshold": {
          "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
          }
        }
    },
    "lint-staged": {
        "*.js": [
            "./node_modules/.bin/eslint --fix --config ./.eslintrc",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}